<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <com.example.user.ocean_story.GameMain
    android:id="@+id/GameMainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/pause_Button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_pause"
        android:onClick="onButtonPause" />

    <Button
        android:id="@+id/option_Button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/pause_Button"
        android:layout_alignStart="@+id/pause_Button"
        android:layout_below="@+id/pause_Button"
        android:background="@drawable/button_option"
        android:onClick="onButtonOption" />

    <Button
        android:id="@+id/dictionary_Button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/option_Button"
        android:layout_alignStart="@+id/option_Button"
        android:layout_below="@+id/option_Button"
        android:background="@drawable/button_dictionary"
        android:onClick="onButtonDictionary" />

    <Button
        android:id="@+id/next_Stage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/dictionary_Button"
        android:layout_alignStart="@+id/dictionary_Button"
        android:layout_below="@+id/dictionary_Button"
        android:background="@drawable/button_next_stage"
        android:onClick="onButtonNextStage" />

    <Button
        android:id="@+id/call_FriendShark_Button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/button_friend_shark"
        android:onClick="onButtonFriendSharkCall"
        android:layout_below="@+id/next_Stage"
        android:layout_alignLeft="@+id/next_Stage"
        android:layout_alignStart="@+id/next_Stage" />

    <Button
        android:id="@+id/heal_Button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/call_FriendShark_Button"
        android:layout_alignLeft="@+id/call_FriendShark_Button"
        android:layout_alignRight="@+id/call_FriendShark_Button"
        android:layout_alignStart="@+id/call_FriendShark_Button"
        android:layout_below="@+id/call_FriendShark_Button"
        android:background="@drawable/button_heal"
        android:onClick="onButtonHeal" />


</RelativeLayout>
